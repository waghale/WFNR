<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/TextView_title"
        android:layout_marginTop="5dp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        style="@style/green_bold_title_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <RelativeLayout

        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">





        <androidx.cardview.widget.CardView
            android:id="@+id/cardcommette"
            android:background="@color/white"

            android:layout_width="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="7dp">
            <RelativeLayout
                android:padding="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_65sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="10dp">
                    <RelativeLayout
                        android:background="@drawable/committee_shadow"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_65sdp">

                        <ImageView
                            android:id="@+id/ImageView_Oraganizing_commitee"
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center|top"
                            android:src="@drawable/baseline_arrow_back_ios_new_24" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/card1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/TextView_name"
                        style="@style/green_bold_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toRightOf="@id/card1"
                        android:gravity="left|center_vertical"
                        android:text="Janice Eng" />

                    <TextView

                        style="@style/gray_bold_TextView"
                        android:id="@+id/TextView_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"

                        android:gravity="left|center_vertical"
                        android:layout_marginTop="1dp"

                        android:layout_toRightOf="@id/card1"
                        android:text="Department of Physical Therapy University of British Columbia"
                        />
                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>



    </RelativeLayout>

</LinearLayout>