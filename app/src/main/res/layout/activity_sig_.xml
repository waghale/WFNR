<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:id="@+id/relativelayout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:id="@+id/linearlayout1"
                android:padding="10dp"
                android:background="@drawable/dashboard_top_background"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView

                    android:id="@+id/imageView_back"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/baseline_arrow_back_ios_new_24" />
                <TextView
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/dark_green"
                    android:layout_gravity="center_vertical"
                    android:text="Special Interest Groups List's"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>







            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <!-- <TextView
                 android:layout_marginStart="@dimen/_5sdp"
                 android:layout_marginBottom="@dimen/_5sdp"
                 android:layout_marginTop="@dimen/_5sdp"
                 style="@style/green_TextView"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:fontFamily="@font/work_sans_medium"
                 android:text="@string/Scientific_Programme_Committee" />-->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerView_special_interest_groups"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>






</LinearLayout>